@page
@model OdeToFood.Pages.Restaurants.AddModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Add new restaurant</h2>

<form method="post">

    <div class="form-group">
        <label asp-for="Restaurant.Name">Name</label>
        <input asp-for="Restaurant.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location">Location</label>
        <input  asp-for="Restaurant.Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Cuisine">Cuisine</label>
        <select asp-for="Restaurant.Cuisine" asp-items="Model.Cuisines" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>