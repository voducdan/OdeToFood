@page "{restaurantId:int}"
@model OdeToFood.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Editing @Model.restaurant.Name</h2>
<form method="post">

    <input type="hidden" asp-for="restaurant.Id" />
    <div class="form-group">
        <label asp-for="restaurant.Name">Name</label>
        <input asp-for="restaurant.Name" class="form-control"/>
        <span class="text-danger" asp-validation-for="restaurant.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="restaurant.Location">Location</label>
        <input asp-for="restaurant.Location" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="restaurant.Cuisine">Cuisine</label>
        <select asp-for="restaurant.Cuisine" asp-items="Model.Cuisines" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary" >Save</button>
</form>
